<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#F1F3F5"
    ohos:orientation="vertical">

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:background_element="#FFFFFF"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:getback"
            ohos:height="30vp"
            ohos:width="80vp"
            ohos:text="返回"
            ohos:text_font="Buttom2"
            ohos:text_size="16fp"
            ohos:top_margin="5vp"
            ohos:left_margin="10vp"
            ohos:background_element="$graphic:butclicked"
            ohos:text_color="#000000"
            />
        <Text
            ohos:height="45vp"
            ohos:width="150vp"
            ohos:text="本机文件"
            ohos:text_font="Headline6"
            ohos:text_alignment="horizontal_center"
            ohos:text_color="#000000"
            ohos:left_margin="20vp"
            ohos:top_margin="5vp"
            ohos:text_size="26fp"/>
        <Button
            ohos:id="$+id:confirm"
            ohos:height="30vp"
            ohos:width="80vp"
            ohos:text="传输"
            ohos:text_font="Buttom2"
            ohos:left_margin="10vp"
            ohos:text_size="16fp"
            ohos:top_margin="5vp"
            ohos:background_element="$graphic:butclicked"
            ohos:text_color="#000000"/>
    </DirectionalLayout>

    <Text
        ohos:height="2vp"
        ohos:width="match_parent"
        ohos:background_element="#33000000"
        />
    <TextField
        ohos:id="$+id:input"
        ohos:height="40vp"
        ohos:width="300vp"
        ohos:hint="请输入文件名"
        ohos:hint_color="#66000000"
        ohos:text_size="20fp"
        ohos:top_margin="15vp"
        ohos:background_element="$graphic:choosebeauty"
        ohos:text_alignment="horizontal_center"
        ohos:layout_alignment="horizontal_center"
        ohos:alpha="100"
        />
    <Button
        ohos:id="$+id:fileconfirm"
        ohos:height="40vp"
        ohos:width="300vp"
        ohos:text="确定"
        ohos:text_font="Buttom1"
        ohos:background_element="$graphic:butclicked"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        ohos:top_margin="15vp"
        ohos:layout_alignment="center"/>
    <Button
        ohos:id="$+id:filesearchbut"
        ohos:height="40vp"
        ohos:width="300vp"
        ohos:text="搜索"
        ohos:text_font="Buttom1"
        ohos:background_element="$graphic:butclicked"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        ohos:top_margin="15vp"
        ohos:layout_alignment="center"/>
    <ListContainer
        ohos:height="0"
        ohos:width="300vp"
        ohos:weight="1"
        ohos:rebound_effect="true"
        ohos:layout_alignment="center"
        ohos:id="$+id:Containeroffilename"
        ohos:background_element="#F1F3F5"/>


</DirectionalLayout>