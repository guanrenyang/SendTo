            <DirectionalLayout
                ohos:id="$+id:container_lists"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:visibility="hide">

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:top_margin="20vp"
                    ohos:bottom_margin="20vp">

                    <Button
                        ohos:id="$+id:btn_start_discovery"
                        ohos:width="250vp"
                        ohos:height="40vp"
                        ohos:text="开始蓝牙扫描"
                        ohos:text_size="20fp"
                        ohos:text_color="#000000"
                        ohos:layout_alignment="center"
                        ohos:background_element="$graphic:clicked"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:width="match_parent"
                        ohos:height="match_content"
                        ohos:text="可连接设备"
                        ohos:text_size="18fp"
                        ohos:text_color="#000000"
                        ohos:left_margin="20vp"
                        ohos:weight="1"/>

                    <DirectionalLayout
                        ohos:width="match_parent"
                        ohos:height="match_content"
                        ohos:weight="1">

                        <RoundProgressBar
                            ohos:id="$+id:progressbar"
                            ohos:height="24vp"
                            ohos:width="24vp"
                            ohos:visibility="hide"
                            ohos:layout_alignment="right|vertical_center"
                            ohos:right_margin="20vp"
                            ohos:progress_color="#000000"
                            ohos:progress_width="2vp"/>
                    </DirectionalLayout>
                </DirectionalLayout>

                <ListContainer
                    ohos:id="$+id:list_available_devices"
                    ohos:width="match_parent"
                    ohos:height="180vp"
                    ohos:rebound_effect="true"
                    ohos:left_margin="30vp"
                    ohos:top_margin="20vp"/>

                <Text
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text="已配对设备"
                    ohos:text_size="18fp"
                    ohos:text_color="#000000"
                    ohos:left_margin="20vp"/>

                <ListContainer
                    ohos:id="$+id:list_paired_devices"
                    ohos:width="match_parent"
                    ohos:height="180vp"
                    ohos:rebound_effect="true"
                    ohos:left_margin="30vp"
                    ohos:top_margin="20vp"/>
                <Button
                    ohos:id="$+id:BTconfirm"
                    ohos:width="250vp"
                    ohos:height="40vp"
                    ohos:text="确认"
                    ohos:text_size="20fp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="center"
                    ohos:top_margin="30vp"
                    ohos:background_element="$graphic:clicked"/>

            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>