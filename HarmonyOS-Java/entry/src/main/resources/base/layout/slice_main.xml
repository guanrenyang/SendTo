<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:width="match_parent"
                   ohos:background_element="#F1F3F5"
                   ohos:height="match_parent">

    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:layout_alignment="horizontal_center">

            <DirectionalLayout
                ohos:id="$+id:directional_bluetooth"
                ohos:width="300vp"
                ohos:height="40vp"
                ohos:orientation="horizontal"
                ohos:background_element="$graphic:beauty"
                ohos:layout_alignment="horizontal_center"
                ohos:top_margin="20vp">

                <Text
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text="蓝牙"
                    ohos:text_size="18fp"
                    ohos:text_color="#000000"
                    ohos:left_margin="20vp"
                    ohos:top_margin="8vp"
                    ohos:text_alignment="left"
                    ohos:weight="1"/>

                <Switch
                    ohos:id="$+id:bt_switch"
                    ohos:width="50vp"
                    ohos:height="20vp"
                    ohos:text_alignment="right"
                    ohos:top_margin="8vp"
                    ohos:right_margin="20vp"/>
            </DirectionalLayout>

